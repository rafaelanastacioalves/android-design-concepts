<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainEntityList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/expand_collapse_viewholder" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
		android:visibility="gone"
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.expand_collapse_animation.ExpandCollapseActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:clickable="true"
            android:tint="@color/lightGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_filter" />

        <com.rafaelanastacioalves.design.concepts.custom.filterlayout.FilterLayout
            android:id="@+id/filterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.constraintlayout.motion.widget.MotionLayout
		app:motionDebug="SHOW_ALL"
		android:visibility="visible"
		android:id="@+id/constraintMotion"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.expand_collapse_animation.ExpandCollapseActivity"
		app:layoutDescription="@xml/expand_collapse_animation_activity_scene">

		<com.rafaelanastacioalves.design.concepts.custom.circularcardview.CircularCardView
			android:id="@+id/expansionBackground"
			android:layout_width="72dp"
			android:layout_height="72dp"
			app:cardBackgroundColor="@color/colorPrimaryDark"
			app:cardCornerRadius="36dp"

			android:layout_marginEnd="16dp"
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:foregroundGravity="center" />

		<ImageView
			android:id="@+id/fabMotion"
			android:layout_width="wrap_content"
			android:layout_height="56dp"
			android:elevation="32dp"
			app:layout_constraintBottom_toBottomOf="@id/expansionBackground"
			app:layout_constraintEnd_toEndOf="@id/expansionBackground"
			app:layout_constraintStart_toStartOf="@id/expansionBackground"
			app:layout_constraintTop_toTopOf="@id/expansionBackground"
			app:srcCompat="@drawable/ic_filter"
			app:tint="@color/colorWhite" />

		<com.rafaelanastacioalves.design.concepts.custom.filterlayout.FilterLayoutMotion
			android:id="@+id/filterLayoutMotion"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			tools:visibility="gone" />
	</androidx.constraintlayout.motion.widget.MotionLayout>
</FrameLayout>
