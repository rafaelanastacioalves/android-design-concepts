<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/custom_filterlayout"
    android:layout_height="match_parent">

    <View
        android:id="@+id/filterOne"
        android:layout_width="240dp"
        android:layout_height="@dimen/customfilterlayout_Item_height"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        style="@style/CustomFilterLayout.Item"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/filterTwo"
        android:layout_width="0dp"
        android:layout_height="@dimen/customfilterlayout_Item_height"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        style="@style/CustomFilterLayout.Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filterOne"
        app:layout_constraintTop_toTopOf="@+id/filterOne"
        />

    <View
        android:id="@+id/filterThree"
        android:layout_width="160dp"
        android:layout_height="@dimen/customfilterlayout_Item_height"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        style="@style/CustomFilterLayout.Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterOne" />


    <View
        android:id="@+id/filterFour"
        android:layout_width="0dp"
        android:layout_height="@dimen/customfilterlayout_Item_height"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="16dp"
        style="@style/CustomFilterLayout.Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filterThree"
        app:layout_constraintTop_toTopOf="@+id/filterThree" />

    <View
        android:id="@+id/filterFive"
        android:layout_width="160dp"
        android:layout_height="@dimen/customfilterlayout_Item_height"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        style="@style/CustomFilterLayout.Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterThree" />


    <View
        android:id="@+id/filterSix"
        android:layout_width="0dp"
        android:layout_height="@dimen/customfilterlayout_Item_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        style="@style/CustomFilterLayout.Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filterFive"
        app:layout_constraintTop_toTopOf="@+id/filterFive" />
</androidx.constraintlayout.widget.ConstraintLayout>