<!-- TODO: Refactor - vamos ver se da para utilizar o mesmo layout com parent merge e sÃ³ mudar a classe da custom view....-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:motionDebug="SHOW_ALL"
        app:layoutDescription="@xml/custom_filterlayout_motion_scene">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/customLayoutTabMaxHeight"
            android:background="@color/DarkGreen"
            android:elevation="33dp"
            android:translationY="32dp"
            app:layout_constraintBottom_toTopOf="@id/buttonsBarTopGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/DarkGreen"
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/viewPager"
            tools:layout_height="@dimen/customLayoutTabMaxHeight"
            tools:listitem="@layout/custom_filterlayout_viewpager_recyclerview_tab_viewholder"
            tools:translationY="0dp"
            tools:visibility="visible" />




        <View
            android:id="@+id/buttonsBarTopGuideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/button_background"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsBarTopGuideline" />

        <ImageView
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorWhite" />

            <ImageView
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:visibility="visible"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
                tools:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_filter"
                app:tint="@color/colorWhite"
                tools:visibility="visible"

                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</merge>