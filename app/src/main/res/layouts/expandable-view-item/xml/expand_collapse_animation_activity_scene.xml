<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/fabOpeningStart">
        <Constraint
            android:id="@id/filterLayoutMotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/fabMotion"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/fabOpeningEnd"
        app:deriveConstraintsFrom="@+id/fabOpeningStart">
        <Constraint
            android:id="@id/filterLayoutMotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/fabMotion"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toBottomOf="@id/filterLayoutMotion"
            app:layout_constraintEnd_toEndOf="@id/filterLayoutMotion"
            app:layout_constraintStart_toStartOf="@id/filterLayoutMotion"
            app:layout_constraintTop_toTopOf="@id/filterLayoutMotion" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterExpansionStart"
        app:deriveConstraintsFrom="@id/fabOpeningEnd">
        >
        <Constraint
            android:id="@id/filterLayoutMotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/fabMotion"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/filterLayoutMotion"
            app:layout_constraintEnd_toEndOf="@id/filterLayoutMotion"
            app:layout_constraintStart_toStartOf="@id/filterLayoutMotion"
            app:layout_constraintTop_toTopOf="@id/filterLayoutMotion" />

        <Constraint
            android:id="@+id/expansionBackground"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@id/filterLayoutMotion"
            app:layout_constraintEnd_toEndOf="@id/filterLayoutMotion"
            app:layout_constraintStart_toStartOf="@id/filterLayoutMotion"
            app:layout_constraintTop_toTopOf="@id/filterLayoutMotion">
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="36dp" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/filterExpansionEnd"
        app:deriveConstraintsFrom="@id/filterExpansionStart">
        >

        <Constraint
            android:id="@+id/expansionBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/customLayoutTabMaxHeight"
            app:layout_constraintBottom_toBottomOf="@id/filterLayoutMotion"
            app:layout_constraintEnd_toEndOf="@id/filterLayoutMotion"
            app:layout_constraintStart_toStartOf="@id/filterLayoutMotion"
            app:layout_constraintTop_toTopOf="@id/filterLayoutMotion">
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="0dp" />
        </Constraint>

        <Constraint
            android:id="@id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:alpha="0"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/filterLayoutMotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:elevation="32dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterLayoutSetle"
        app:deriveConstraintsFrom="@id/filterExpansionEnd">


    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/fabOpeningEnd"
        app:constraintSetStart="@id/fabOpeningStart"
        app:duration="5000"
        app:layoutDuringTransition="honorRequest">
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@id/fabMotion"
                app:percentX="0.85"
                app:percentY="0.15" />
        </KeyFrameSet>


    </Transition>

    <Transition
        app:constraintSetEnd="@id/filterExpansionEnd"
        app:constraintSetStart="@id/filterExpansionStart"
        app:duration="5000"
        app:layoutDuringTransition="honorRequest">
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="80"
                app:motionTarget="@id/expansionBackground"
                app:percentHeight="1"
                app:percentWidth="1" />
            <KeyAttribute
                app:framePosition="80"
                app:motionTarget="@id/expansionBackground">
                <CustomAttribute
                    app:attributeName="radius"
                    app:customDimension="160dp" />
            </KeyAttribute>
            <KeyAttribute
                android:alpha="0"
                android:elevation="0dp"
                app:framePosition="99"
                app:motionTarget="@id/filterLayoutMotion"></KeyAttribute>
        </KeyFrameSet>
    </Transition>
</MotionScene>
