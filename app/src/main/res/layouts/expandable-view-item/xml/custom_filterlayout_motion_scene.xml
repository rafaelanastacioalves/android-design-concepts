<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/filterOpeningStart">
        <Constraint
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/viewPager">
            <Transform android:translationY="@dimen/customLayoutTabMaxHeight" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterOpeningEnd"
        app:deriveConstraintsFrom="@+id/filterOpeningStart">
        //TODO: Refactor - o height pode ser extraido para ser usado no em outros lugares ...
        <Constraint
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/viewPager">
            <Transform android:translationY="0dp" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/filterOpeningEnd"
        app:constraintSetStart="@+id/filterOpeningStart"
        app:duration="2000" />
</MotionScene>
