<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/fabOpeningStart">
        <Constraint android:id="@id/viewPager">
            <Transform android:translationY="32dp" />
            <PropertySet android:visibility="invisible" />
        </Constraint>
        <Constraint
            android:id="@+id/tabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:background="@color/tab_bg_color"
            android:clipToPadding="false"

            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/viewPager"

            />



        <Constraint
            android:id="@+id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:elevation="32dp"
            app:layout_constraintBottom_toBottomOf="@id/expansionBackground"
            app:layout_constraintEnd_toEndOf="@id/expansionBackground"
            app:layout_constraintStart_toStartOf="@id/expansionBackground"
            app:layout_constraintTop_toTopOf="@id/expansionBackground"
            app:srcCompat="@drawable/ic_filter"
            app:tint="@color/colorWhite" />
        <Constraint
            android:id="@+id/expansionBackground"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="36dp"
            app:cardElevation="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            android:elevation="33dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/buttonsBarBackground"
            app:layout_constraintStart_toStartOf="@id/buttonsBarBackground"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorWhite" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/fabOpeningEnd"
        app:deriveConstraintsFrom="@+id/fabOpeningStart">


        <Constraint
            android:id="@+id/expansionBackground"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="36dp"
            app:cardElevation="30dp"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager" />
        <Constraint
            android:id="@id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="33dp"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterExpansionStart"
        app:deriveConstraintsFrom="@id/fabOpeningEnd">
        >
        <Constraint android:id="@id/viewPager">
            <Transform android:translationY="32dp" />
        </Constraint>

        <Constraint
            android:id="@id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager" />

        <Constraint
            android:id="@+id/expansionBackground"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:visibility="visible"

            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager">
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="36dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterExpansionEnd"
        app:deriveConstraintsFrom="@id/filterExpansionStart">
        >

        <Constraint
            android:id="@+id/expansionBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="@id/viewPager"
            app:layout_constraintEnd_toEndOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="@id/viewPager"
            app:layout_constraintTop_toTopOf="@id/viewPager">
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="0dp" />
        </Constraint>

        <Constraint
            android:id="@id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>


    <ConstraintSet
        android:id="@+id/filterSettleStart"
        app:deriveConstraintsFrom="@id/filterExpansionEnd">
        // TODO: Refactor - experimentar remover isso, j√° que esta citado no layout inicial...
        (04/01/2021)


        <Constraint
            android:id="@+id/buttonsBarBackground"
            android:layout_width="0dp"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@android:color/transparent" />
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:alpha="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/buttonsBarBackground"
            app:layout_constraintStart_toStartOf="@id/buttonsBarBackground"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorWhite" />

        <Constraint
            android:id="@+id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_filter"
            app:tint="@color/colorWhite" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterSettleEnd"
        app:deriveConstraintsFrom="@+id/filterSettleStart">

        <Constraint android:id="@id/viewPager">
            <Transform android:translationY="0dp" />
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/buttonsBarBackground"


            >
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/bottom_bar_color" />
            <PropertySet android:visibility="visible" />
        </Constraint>

        //TODO: Refactor - o height pode ser extraido para ser usado no em outros lugares ...
        <Constraint
            android:id="@+id/tabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:background="@color/tab_bg_color"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toTopOf="@id/viewPager" />


        <Constraint
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/buttonsBarBackground"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
            app:layout_constraintStart_toStartOf="@id/buttonsBarBackground"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorWhite" />

        // TODO: Refactor - marginbottom repetido.... (31/12/2020)
        <Constraint
            android:id="@+id/fabMotion"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
            app:srcCompat="@drawable/ic_filter"
            app:tint="@color/colorWhite" />


    </ConstraintSet>


    <Transition
        app:constraintSetEnd="@id/fabOpeningEnd"
        app:constraintSetStart="@id/fabOpeningStart"
        app:duration="5000"
        app:layoutDuringTransition="honorRequest">
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@id/fabMotion"
                app:percentX="0.85"
                app:percentY="0.15" />
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@id/expansionBackground"
                app:percentX="0.85"
                app:percentY="0.15" />
        </KeyFrameSet>


    </Transition>

    <Transition
        app:constraintSetEnd="@id/filterExpansionEnd"
        app:constraintSetStart="@id/filterExpansionStart"
        app:duration="5000"
        app:layoutDuringTransition="honorRequest">
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="80"
                app:motionTarget="@id/expansionBackground"
                app:percentHeight="1"
                app:percentWidth="1" />
            <KeyAttribute
                app:framePosition="80"
                app:motionTarget="@id/expansionBackground">
                <CustomAttribute
                    app:attributeName="radius"
                    app:customDimension="160dp" />
            </KeyAttribute>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="99"
                app:motionTarget="@id/viewPager" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="99"
                app:motionTarget="@id/fabMotion" />
        </KeyFrameSet>
    </Transition>

    <Transition
        app:constraintSetEnd="@id/filterSettleEnd"
        app:constraintSetStart="@+id/filterSettleStart"
        app:duration="2000" />
</MotionScene>
