<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/filterOpeningStart">
        <Constraint
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/viewPager" />

        <Constraint
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:alpha="0"
            android:background="@color/bottom_bar_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPager" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterOpeningEnd"
        app:deriveConstraintsFrom="@+id/filterOpeningStart">
        //TODO: Refactor - o height pode ser extraido para ser usado no em outros lugares ...
        <Constraint
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/viewPager"></Constraint>

        <Constraint
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:alpha="1"
            android:background="@color/bottom_bar_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPager" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/filterOpeningEnd"
        app:constraintSetStart="@+id/filterOpeningStart"
        app:duration="2000" />
</MotionScene>
