<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/filterOpeningStart">
        <Constraint
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/viewPager" />

        <Constraint
            android:id="@+id/button_background"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:alpha="0"
            android:background="@color/bottom_bar_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsBarTopGuideline" />
        <Constraint
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:foregroundGravity="left"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsBarTopGuideline"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorWhite" />

        <Constraint
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:alpha="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
            app:layout_constraintTop_toTopOf="@+id/buttonsBarTopGuideline"
            app:srcCompat="@drawable/ic_filter"
            app:tint="@color/colorWhite" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filterOpeningEnd"
        app:deriveConstraintsFrom="@+id/filterOpeningStart">
        //TODO: Refactor - o height pode ser extraido para ser usado no em outros lugares ...
        <Constraint
            android:id="@+id/viewpagerTabRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customLayoutTabMaxHeight"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="32dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/viewPager" />

        <Constraint
            android:id="@+id/button_background"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:alpha="1"
            android:background="@color/bottom_bar_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsBarTopGuideline"

            />

        <Constraint
            android:id="@+id/dismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonsBarTopGuideline"
            app:srcCompat="@drawable/ic_close"
            app:tint="@color/colorWhite" />

        <Constraint
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:alpha="1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="@id/buttonsBarTopGuideline"
            app:srcCompat="@drawable/ic_filter"
            app:tint="@color/colorWhite" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/filterOpeningEnd"
        app:constraintSetStart="@+id/filterOpeningStart"
        app:duration="2000" />
</MotionScene>
